<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".selectFilter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/jugendteamDarkBlue"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="@string/filter_title"
            app:titleTextColor="@color/white" />

        <Switch
            android:id="@+id/switch_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_materials" />

        <Switch
            android:id="@+id/switch_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/age_string" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBarAge"
                style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="20"
                android:progress="5"
                android:progressTint="@color/jugendteamDarkBlue" />

            <TextView
                android:id="@+id/numerAge"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <Switch
            android:id="@+id/switch_sice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/size_string" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBarSize"
                style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="100"
                android:progress="5"
                android:progressTint="@color/jugendteamDarkBlue" />

            <TextView
                android:id="@+id/numberSize"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="10"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

        <Button
            android:id="@+id/filterReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_filter" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/use_Filter" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>